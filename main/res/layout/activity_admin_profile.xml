<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_profile">

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="606dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/admin_p_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/admin_p_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="35dp" />


                <TextView
                    android:id="@+id/admin_p_t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mob"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="62dp" />

                <TextView
                    android:id="@+id/admin_p_t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="88dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/admin_p_b1"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="Add Seller" />

            <Button
                android:id="@+id/admin_p_b2"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="View Seller" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/admin_p_b3"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="View Buyer" />

            <Button
                android:id="@+id/admin_p_b4"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="view admins" />
        </LinearLayout>

        <Button
            android:id="@+id/admin_p_b5"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add admins" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>